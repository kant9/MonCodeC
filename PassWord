#include <stdio.h>
#include <stdlib.h>
#include <string.h>
int verif(char reponse[25])
{
    int compteur=0;
    for (int i = 0; i < strlen(reponse); i++)
    {
        if (reponse[i]>='0'&& reponse[i] <='9')
        {
            compteur++;
        }
        
    }
        if (compteur == strlen(reponse))
        {
            return 1;
        }
        else
        {
            return 0;
        }

        // c' est une modification
}
int verif(char reponse[25]);
